    <script>
        function actualizarValores() {
            // Simula la obtención de nuevos valores de temperatura y humedad.
            const nuevaTemperatura = (Math.random() * 1 + 24).toFixed(2); // Entre 26 y 27 grados
            const nuevaHumedad = (Math.random() * 1 + 30).toFixed(2); // Entre 43 y 44 %

            // Actualiza los valores en el DOM.
            document.getElementById('temperatura').innerText = `${nuevaTemperatura} °C`;
            document.getElementById('humedad').innerText = `${nuevaHumedad} %`;

            // Reinicia el tiempo de la última lectura.
            document.getElementById('ultimo').innerText = '0';
        }

        function actualizarTiempo() {
            const ultimo = document.getElementById('ultimo');
            let segundos = parseInt(ultimo.innerText);
            ultimo.innerText = (segundos + 1).toString();
        }

        // Actualiza los valores cada 5 segundos.
        setInterval(actualizarValores, 5000);

        // Actualiza el tiempo cada segundo.
        setInterval(actualizarTiempo, 1000);
    </script>
</body>

